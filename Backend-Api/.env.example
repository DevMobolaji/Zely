# JWT keys: prefer RS256 (private in KMS/HSM). For dev you can use HS256 secret.
JWT_ALGO=RS256
JWT_ACCESS_PRIVATE_KEY_PATH=./keys/jwt_private.pem
JWT_ACCESS_PUBLIC_KEY_PATH=./keys/jwt_public.pem
JWT_ACCESS_EXPIRES=10m
JWT_SECRET= Secret key for JWT tokens
SESSION_SECRET= Secret for session encryption

# Refresh token HMAC secret for hashing raw tokens (rotate periodically)
REFRESH_HMAC_SECRET=super_secret_hmac_key_change_in_prod
REFRESH_EXPIRES_DAYS=14
REFRESH_COOKIE_NAME=rtoken

# MFA encryption (AES-256-GCM key) - store safely in KMS
MFA_ENCRYPTION_KEY_BASE64=XXXXXXXXXXXXXXXXXXXXXXXX (32 bytes base64)

# Argon2 pepper (optional) - store in KMS
PEPPER=""

# MongoDB
MONGO_URI=""

# App
APP_NAME=MyFintech
NODE_ENV=development
PORT=4000


LOCAL_ENCRYPTION_KEY=""




